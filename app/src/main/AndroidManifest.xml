<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".data.ShopApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyShop"
        tools:targetApi="31">
        <activity
            android:name=".ui.CheckOutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.order.UserOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".ui.order.OrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.category.AdminCategoriesDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.UserDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.product.UserProductDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.AdminProductDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.UserProductsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.AdminProductsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AdminContainerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.UserContainerActivity"
            android:exported="false" />
    </application>

</manifest>